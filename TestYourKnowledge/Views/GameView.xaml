<Page x:Class="Domino.Views.GameView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Domino.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GameView">

    <Grid Background="{StaticResource BackgroundDarkColorBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Border Grid.Column="0"
                Style="{StaticResource GamePanelBorder}">
            <Grid Margin="10">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <local:DominoUserControl Grid.Row="0" Grid.Column="0" DataContext="{Binding CurrentDominos[0]}"/>
                <local:DominoUserControl Grid.Row="0" Grid.Column="1" DataContext="{Binding CurrentDominos[1]}"/>
                <local:DominoUserControl Grid.Row="0" Grid.Column="2" DataContext="{Binding CurrentDominos[2]}"/>
                <local:DominoUserControl Grid.Row="0" Grid.Column="3" DataContext="{Binding CurrentDominos[3]}"/>
                <local:DominoUserControl Grid.Row="0" Grid.Column="4" DataContext="{Binding CurrentDominos[4]}"/>
                <local:DominoUserControl Grid.Row="0" Grid.Column="5" DataContext="{Binding CurrentDominos[5]}"/>

                <local:DominoUserControl Grid.Row="1" Grid.Column="5" DataContext="{Binding CurrentDominos[6]}"
                                         HorizontalAlignment="Right"/>

                <local:DominoUserControl Grid.Row="2" Grid.Column="5" DataContext="{Binding CurrentDominos[7]}"/>
                <local:DominoUserControl Grid.Row="2" Grid.Column="4" DataContext="{Binding CurrentDominos[8]}"/>
                <local:DominoUserControl Grid.Row="2" Grid.Column="3" DataContext="{Binding CurrentDominos[9]}"/>
                <local:DominoUserControl Grid.Row="2" Grid.Column="2" DataContext="{Binding CurrentDominos[10]}"/>
                <local:DominoUserControl Grid.Row="2" Grid.Column="1" DataContext="{Binding CurrentDominos[11]}"/>
                <local:DominoUserControl Grid.Row="2" Grid.Column="0" DataContext="{Binding CurrentDominos[12]}"/>

            </Grid>
        </Border>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


            <Border Grid.Column="0"
                Style="{StaticResource GamePanelBorder}">

                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <local:DominoUserControl Grid.Column="1" DataContext="{Binding DominoOne}"
                                             PreviewMouseLeftButtonDown="DominoUserControl_PreviewMouseLeftButtonDown"/>

                    <local:DominoUserControl Grid.Column="3" DataContext="{Binding DominoTwo}"
                                             PreviewMouseLeftButtonDown="DominoUserControl_PreviewMouseLeftButtonDown"/>

                    <local:DominoUserControl Grid.Column="5" DataContext="{Binding DominoThree}"
                                             PreviewMouseLeftButtonDown="DominoUserControl_PreviewMouseLeftButtonDown"/>
                </Grid>
            </Border>
            <Border Grid.Column="2"
                Style="{StaticResource GamePanelBorder}">

                <Grid Background="{StaticResource BackgroundDarkColorBrush}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="{Binding TimeLeft}" Style="{StaticResource BaseTextBlock}"/>
                    <Button Grid.Row="1" Content="MENU" Command="{Binding MainMenuCommand}"/>
                </Grid>

            </Border>
        </Grid>
    </Grid>
</Page>
